# Example .env file for TNN project
# Copy this to .env and modify the values as needed

# Coordinator configuration
COORDINATOR_HOST=localhost
COORDINATOR_PORT=9000

# Worker hosts configuration
WOKRER1_HOST=localhost
WORKER1_PORT=9001

WORKER2_HOST=localhost
WORKER2_PORT=9002
# more workers can be added similarly, note to add it to the coordinator config as well

# Device configuration
DEVICE_TYPE=GPU  # Options: CPU, GPU

# Training parameters
BATCH_SIZE=64
NUM_EPOCHS=5
LR_INITIAL=0.001
LR_DECAY_FACTOR=0.9
LR_DECAY_INTERVAL=10

# Logging
LOG_LEVEL=INFO
PROGRESS_PRINT_INTERVAL=100
