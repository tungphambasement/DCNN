# Example .env file for DCNN project
# Copy this to .env and modify the values as needed

# Coordinator configuration
COORDINATOR_HOST=localhost
COORDINATOR_NUM_THREADS=4

# Worker hosts configuration
WORKER_HOST_8001=localhost
WORKER_HOST_8002=localhost

# Training parameters
BATCH_SIZE=64
NUM_EPOCHS=5
LEARNING_RATE=0.001

# Data paths
MNIST_TRAIN_PATH=./data/mnist/train.csv
MNIST_TEST_PATH=./data/mnist/test.csv
CIFAR10_DATA_PATH=./data/cifar-10-batches-bin

# Logging
LOG_LEVEL=INFO
PROGRESS_PRINT_INTERVAL=100

# Performance tuning
USE_MKL=1
